<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="top"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp">

        <ImageButton
            android:id="@+id/msg_nonlu"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:contentDescription="@string/message_non_lus"
            app:srcCompat="@android:drawable/bottom_bar" />

        <ImageButton
            android:id="@+id/tache_rest"
            android:layout_width="343dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:contentDescription="@string/t_ches_restantes"
            app:srcCompat="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/msg_nonlu"
            android:layout_alignLeft="@+id/msg_nonlu"
            android:layout_alignTop="@+id/msg_nonlu"
            android:layout_alignBottom="@+id/msg_nonlu"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:text="@string/message_non_lus"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tache_rest"
            android:layout_alignLeft="@+id/tache_rest"
            android:layout_alignTop="@+id/tache_rest"
            android:layout_alignBottom="@+id/tache_rest"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:text="@string/t_ches_restantes"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nb_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/msg_nonlu"
            android:layout_alignEnd="@+id/msg_nonlu"
            android:layout_alignRight="@+id/msg_nonlu"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/ic_button_add"
            android:text="@string/nb_ressource"
            tools:text="3" />

        <Button
            android:id="@+id/nb_msg2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/tache_rest"
            android:layout_alignEnd="@+id/tache_rest"
            android:layout_alignRight="@+id/tache_rest"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/ic_button_add"
            android:text="@string/nb_ressource" />

        <TextView
            android:id="@+id/tache_urg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="210dp"
            android:text="@string/t_ches_les_plus_urgentes"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="356dp"
            android:layout_height="216dp"
            android:layout_below="@+id/tache_urg"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="4dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>