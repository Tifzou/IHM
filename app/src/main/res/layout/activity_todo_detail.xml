<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projet IHM"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@drawable/rounded_corner_blue"

        android:textAlignment="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/back"
        android:text="Détails"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Présentation des IHM"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date début"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>


    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="20/12/18"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date fin"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>


    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:text="01/01/18"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>


    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="La présentation du projet COLLABORAT'IF avec diaporama"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Priorité"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_priority_selector"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membres affectés"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryWhite"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckedTextView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/textCheckMark"
            android:background="@drawable/rounded_corner_blue"
            android:textSize="20dp"
            android:checked="true"
            android:text="AC"
            android:textColor="@color/colorPrimaryWhite"/>

        <CheckedTextView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/textCheckMark"
            android:background="@drawable/rounded_corner_blue"
            android:textSize="20dp"
            android:checked="true"
            android:text="BC"
            android:textColor="@color/colorPrimaryWhite"/>

        <CheckedTextView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/textCheckMark"
            android:background="@drawable/rounded_corner_blue"
            android:textSize="20dp"
            android:checked="true"
            android:text="CC"
            android:textColor="@color/colorPrimaryWhite"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

        <Button
            android:id="@+id/returnButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Retour" />

        <Button
            android:id="@+id/terminateButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Terminer" />

    </LinearLayout>
</LinearLayout>
</ScrollView>