<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web Sémantique"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@drawable/rounded_corner_blue"

        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Détails"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@drawable/back"

        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Présentation IHM" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date début"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date fin"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Priorité"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_priority_selector"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membres affectés"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_rectangle"
            android:textOff="AC"
            android:textOn="AC"
            android:textColor="@color/colorPrimaryWhite"/>

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_rectangle"
            android:textOff="BC"
            android:textOn="BC"
            android:textColor="@color/colorPrimaryWhite"/>


        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_rectangle"
            android:textOff="CC"
            android:textOn="CC"
            android:textColor="@color/colorPrimaryWhite"/>

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_rectangle"
            android:textOff="DC"
            android:textOn="DC"
            android:textColor="@color/colorPrimaryWhite"/>

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_rectangle"
            android:textOff="EC"
            android:textOn="EC"
            android:textColor="@color/colorPrimaryWhite"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:layout_gravity="bottom"/>
    </LinearLayout>


</LinearLayout>