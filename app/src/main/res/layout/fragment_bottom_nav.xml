<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".BottomNavFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@android:drawable/sym_action_chat"
        android:background="@android:color/transparent"
        android:tint="@color/colorPrimaryRed"
        android:contentDescription="@string/chat"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/tasksButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="@color/colorPrimaryRed"
            android:background="@android:color/transparent"
            android:contentDescription="@string/taches" />

        <ImageButton
                android:id="@+id/dashboardButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:contentDescription="@string/dashboard"
                android:src="@android:drawable/ic_dialog_dialer"
                android:background="@android:color/transparent"
                android:tint="@color/colorPrimaryRed" />

        <ImageButton
            android:id="@+id/group_infoButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/colorPrimaryRed"
            android:background="@android:color/transparent"
            android:contentDescription="@string/groupe" />

        <ImageButton
            android:id="@+id/chatButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/chat"
            android:src="@android:drawable/stat_notify_chat"
            android:tint="@color/colorPrimaryRed" />
    </LinearLayout>
</LinearLayout>